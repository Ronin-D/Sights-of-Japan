html
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		title
		link(rel="stylesheet", href="css/bootstrap-reboot.min.css")
		link(rel="stylesheet", href="css/main.css")
	body
		header
			.title Достопримечательности японии
			nav 
				each path, name in navMenuItems
					div 
						a(href=path)= name
		div.images
			each imgUrl in images 
				img(src=imgUrl)
		mixin sightItem(imageUrl, header, text)
			img(src=imageUrl)
			h3= header
			div= text
		article 
			each block in listSections 
				section
					+sightItem(block.imageUrl, block.header, block.text)
		footer
			.author= authorInfo 
			.contacts
				a(href="https://github.com/Ronin-D") GitHub
		//- Scripts
		script(src="js/jquery-3.5.1.min.js")
		script(src="js/main.js")
